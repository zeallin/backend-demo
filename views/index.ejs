<%- include('partials/header') -%>

<div class="w-2/3 bg-white p-4 rounded-lg text-center overflow-hidden">
  <%- include('partials/alert') -%>

  <% if (locals.isAuthenticated) { %>

  <% if (locals.loginMgr.isEmailVerified(locals)) { %>
  <div class="rounded-full bg-gray-200 h-24 w-24 items-center content-center justify-center mb-2 mt-1 m-auto bg-center bg-contain" style="background-image: url('<%= user.picture %>');"></div>
  <h1 class="text-4xl"><%= user.name ? user.name : user.nickname %></h1>
  <h2 class="text-ml"><%= user.email %></h2>

  <% if (locals.loginMgr.isAuth0Login(locals.loginSrcType)) { %>
  <p><a href="/profile" class="underline">Manage your profile</a>.</p>
  <% } else { %>
  <p><a href="/profile" class="underline">View your profile</a>.</p>
  <% } %>

  <% } else { %>
  <h1 class="text-4xl">Welcome!</h1>
  <h2 class="text-ml">Your account is not verified. <br />Please check your email and click the verification link.</h2>
  <div class="mt-3">
    <a href="/resend-email" class="bg-blue-700 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded-full">
      <span>Resend Email Verification</span>
    </a>
  </div>
  <% } %>
  <% } else { %>
  <h1 class="text-4xl">Welcome!</h1>
  <p>You are not logged in. Please <a href="/login" class="underline">Login</a> or <a href="/signup" class="underline">Signup</a>.</p>
  <% } %>
</div>

<%- include('partials/footer') -%>